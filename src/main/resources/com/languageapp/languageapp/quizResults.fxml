<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.languageapp.languageapp.QuizResultsController">
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Text fx:id="absoluteScoreText" strokeType="OUTSIDE" strokeWidth="0.0" text="Text">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Text>
                <Text fx:id="percentageScoreText" strokeType="OUTSIDE" strokeWidth="0.0" text="Text">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Text>
                <Text fx:id="comparedToAverageScoreText" strokeType="OUTSIDE" strokeWidth="0.0" text="Text">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Text>
            </children>
        </VBox>
    </center>
    <top>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <fx:include source="menuBar.fxml" />
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Results">
                    <font>
                        <Font size="36.0" />
                    </font>
                </Text>
            </children>
        </VBox>
    </top>
   <bottom>
      <Button mnemonicParsing="false" onAction="#playAgain" text="Play again" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin></Button>
   </bottom>
</BorderPane>
